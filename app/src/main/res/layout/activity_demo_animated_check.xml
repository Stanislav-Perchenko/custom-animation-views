<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".demoactivity.AnimatedCheckDemoActivity">

    <android.support.v7.widget.Toolbar android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_weight="0"
        android:theme="@style/ToolbarTheme"
        style="@style/ToolbarStyle" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0"
        android:gravity="center_vertical">
        <TextView android:id="@+id/action_toggle_fl_no_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginLeft="24dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:text="@string/action_toggle_no_animation"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <com.alperez.widget.customlayout.AnimatedCheckableFrameLayout android:id="@+id/animated_frame"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:checkedStatePadding="16dp"
            android:background="#D5D5D5"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView android:id="@+id/action_toggle_fl_with_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginRight="24dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:text="@string/action_toggle_with_animation"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0"
        android:gravity="center_vertical">
        <TextView android:id="@+id/action_toggle_iv_no_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginLeft="24dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:text="@string/action_toggle_no_animation"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <com.alperez.widget.AnimatedCheckableImageView android:id="@+id/animated_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:checkedStatePadding="16dp"
            app:anim_duration="1000"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_image"
            android:background="#D5D5D5"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView android:id="@+id/action_toggle_iv_with_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginRight="24dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:text="@string/action_toggle_with_animation"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>